.pageContainer
  background-color #F1ECE1
  min-height 100vh
  padding 4rem 1rem
  position relative
  overflow-hidden

.pegboardOverlay
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  opacity 0.03
  pointer-events none
  background-image radial-gradient(circle at 50% 50%, #18181B 1.5px, transparent 1.5px)
  background-size 12px 12px

.header
  text-align center
  margin-bottom 4rem
  position relative
  z-index 10

.titleBrand
  display inline-block
  background-color #EF4444
  color white
  padding 1rem 2rem
  border 4px solid #18181B
  box-shadow 8px 8px 0px #18181B
  margin-bottom 1.5rem

.statsGrid
  display grid
  grid-template-columns repeat(2, 1fr)
  gap 1rem
  max-width 800px
  margin 0 auto 4rem
  
  @media (min-width: 768px)
    grid-template-columns repeat(4, 1fr)

.statCard
  background-color white
  border 4px solid #18181B
  padding 1.5rem
  text-align center
  position relative
  
  &::after
    content ''
    position absolute
    bottom -8px
    right -8px
    width 100%
    height 100%
    background-color #18181B
    z-index -1

.colorGrid
  display grid
  grid-template-columns repeat(auto-fill, minmax(180px, 1fr))
  gap 1.5rem
  position relative
  z-index 10

.colorCard
  background-color white
  border 4px solid #18181B
  padding 1rem
  transition transform 0.1s, box-shadow 0.1s
  cursor default
  
  &:hover
    transform translate(-4px, -4px)
    box-shadow 8px 8px 0px #18181B

.colorPreview
  width 100%
  aspect-ratio 1
  border 4px solid #18181B
  margin-bottom 1rem
  position relative
  
  &::before
    content ''
    position absolute
    inset 0
    background-image radial-gradient(circle at 50% 50%, rgba(0,0,0,0.1) 1px, transparent 1px)
    background-size 8px 8px

.colorInfo
  .code
    font-weight 900
    color #EF4444
    font-size 0.75rem
    letter-spacing 0.1em
    margin-bottom 0.25rem
  
  .name
    font-weight 800
    color #18181B
    font-size 0.875rem
    line-height 1.2
    margin-bottom 0.5rem
  
  .hex
    font-family monospace
    font-size 0.75rem
    color #71717A
    background #F4F4F5
    padding 0.25rem 0.5rem
    display inline-block
